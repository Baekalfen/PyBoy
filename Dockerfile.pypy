FROM pypy:3

RUN apt-get update && apt-get install -y \
  build-essential \
  libsdl2-dev \
  libtiff5-dev \
  libjpeg-dev \
  zlib1g-dev \
  && rm -rf /var/lib/apt/lists/*

COPY requirements.txt /
RUN pip install --upgrade pip && pip install --no-cache-dir -r requirements.txt

COPY . /pyboy
WORKDIR /pyboy

RUN pip install .
WORKDIR /
